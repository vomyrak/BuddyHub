<UserControl x:Class="UCUI.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UCUI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
  <Grid>
    <Border BorderThickness='3'
            BorderBrush='#FF353535'
            HorizontalAlignment='Center'
            VerticalAlignment='Center'
            CornerRadius='3'
            Background='White'>
      <StackPanel>
        <Grid MinHeight='150'
              MinWidth='200'>
          <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height='6*' />
            <RowDefinition Height='3*' />
            <RowDefinition Height='3*' />
            <RowDefinition Height='3*' />
            <RowDefinition Height='3*' />
          </Grid.RowDefinitions>
          <TextBlock TextWrapping='Wrap'
                     VerticalAlignment='Top'
                     HorizontalAlignment='Center'
                     Background='White'
                     MaxWidth='500'
                     FontFamily='Calibri'
                     Text='This is where the settings go'
                     Grid.Row='0'
                     Grid.ColumnSpan='2' />
          <CheckBox Grid.Row='1'
                    Grid.Column='0'
                    HorizontalAlignment='Left'
                    Margin='10 0 0 0'
                    Content='Switch Mode'
                    FontFamily='Calibri' />
          <CheckBox Grid.Row='2'
                    Grid.Column='0'
                    HorizontalAlignment='Left'
                    Margin='10 0 0 0'
                    Content='Option'
                    FontFamily='Calibri' />
          <Button Grid.Row='4'
                  Grid.Column='0'
                  HorizontalAlignment='Stretch'
                  Content='Scan Templates'
                  Margin='10,0,10,0'
                  Background="#FF353535"
                  FontFamily="Calibri"
                  Foreground="White" />
          <Button Grid.Row='4'
                  Grid.Column='1'
                  HorizontalAlignment='Stretch'
                  Content='Send Feedback'
                  Margin='10,0,10,0'
                  Background="#FF353535"
                  FontFamily="Calibri"
                  Foreground="White" />
        </Grid>
        <TextBlock HorizontalAlignment='Center'
                   Text='Click anywhere outside to return'
                   Margin='10' />
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
