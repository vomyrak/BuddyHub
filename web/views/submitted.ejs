  <link rel="stylesheet" href="./css/tether.css">
</head>

<body id="myBody">

  <% include ./partials/sidebar %>

  <!-- Page Content -->
  <div id="content">
    <div class="container">
      <% include ./partials/header %>

      <H1 class="lang en" style="text-align: center; font-size : 1.5em; font-weight: bolder">Device Suggestion</H1>

    </div>

    Thank you for your suggestion!
    <br><br>

    <div>
      <a id="contact_us" href="/contact" title="Contact Us">
        <button class="method-button">Suggest Another Device</button>
      </a>
      <br>
      <a id="home" href="/" title="Home">
        <button class="method-button">Home</button>
      </a>
    </div>
  </div>

  <!-- Stores the mapping of unspaced device name to display name in different language -->
  <div>
    <% devices.forEach(function(device) { %>
      <input type="hidden" id="<%= device.device.replace(/\s/g, '') %>en" value='<%= device.device_name %>' />
      <% }); %>
  </div>

  <!-- jQuery CDN - Slim version (=without AJAX) -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
